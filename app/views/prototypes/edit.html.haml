= form_for @prototype do |f|
  .container.proto-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :name, autofocus: true, placeholder: 'Title', class: 'proto-new-title'
      .row
        = f.fields_for :images, @prototype.images.main do |images_form|
          .col-md-12
            .cover-image-upload
              = images_form.file_field :content
              = images_form.hidden_field :status, value: 'main'
              = image_tag(@prototype.images[0].content.url, class: 'main_image_preview')
          .col-md-12
            %ul.proto-sub-list.list-group
              - @prototype.images.sub.each_with_index do |img, i|
                = f.fields_for :images, img do |images_form|
                  %li.list-group-item.col-md-4
                    .image-upload
                      = images_form.file_field :content
                      = images_form.hidden_field :status, value: 'sub'
                      = image_tag(img.content.url, class: "sub_image#{i+1}_preview")
              %li.list-group-item.col-md-4.plus
                .image-upload-plus
                  %span +
                %li.list-group-item.col-md-4#hidden_form
                  .image-upload
                    = f.fields_for :images, @prototype.images.sub do |images_form|
                      = images_form.file_field :content
                      = images_form.hidden_field :status, value: 'sub'
                      = image_tag (), class: 'plus_form sub_image3_preview'
      .row.proto-description
        .col-md-12
          = f.text_field :copy, placeholder: 'Catch Copy'
        .col-md-12
          = f.text_area :concept, cols: '30', rows: '4', placeholder: 'Concept'
        .col-md-12
          %h4 Tag List
          .row
            - @prototype.tag_list.each do |proto_tag|
              .col-md-3
                = text_field_tag 'prototype[tag][]',proto_tag
      .row.text-center.proto-btn
        = f.submit 'Publish', class: 'btn btn-lg btn-primary btn-block'

= form_for @prototype do |f|
  .container.proto-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :name, autofocus: true, placeholder: "Title", class: "proto-new-title"
      .row
        .col-md-12
          = f.fields_for :images, @prototype.images.main do |images_form|
            .cover-image-upload
              = images_form.file_field :main
            .col-md-12
              %ul.proto-sub-list.list-group
                = f.fields_for :images, @prototype.images.sub.first do |images_form|
                  %li.list-group-item.col-md-4
                    .image-upload
                      = images_form.file_field :sub
                = f.fields_for :images, @prototype.images.sub.second do |images_form|
                  %li.list-group-item.col-md-4
                    .image-upload
                      = images_form.file_field :sub1
                %li.list-group-item.col-md-4
                  .image-upload-plus
                    %span +
      .row.proto-description
        .col-md-12
          = f.text_field :copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{ type: "text", placeholder: "Web Design" }/
            .col-md-3
              %input{ type: "text", placeholder: "UI" }/
            .col-md-3
              %input{ type: "text", placeholder: "Application" }/
      .row.text-center.proto-btn
        = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"
